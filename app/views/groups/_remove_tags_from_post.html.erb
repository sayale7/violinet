<% form_tag '/groups/remove_tags', :id => "remove_tags" do %>
<% unless (@group.tags - Tag.find_all_by_is_category(false)).empty?  %>
<br></br>
<h2><%= t('tag.remove_tags_from_post') %></h2>
<% for tag in (@group.tags - Tag.find_all_by_is_category(false)) do %>
<span class="clickable_items_to_remove" id="<%= tag.id %>"><%= tag.tag_names.find_by_language(I18n.locale.to_s).name %></span>
<% end %>
<%= hidden_field_tag 'id', @group.id %>
<%= submit_tag t("tag.remove_from_post"), :class => "clear_both" %>
<% end %>
<% end %>