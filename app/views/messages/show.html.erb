<!-- Navigation for Mail -->
<div id="small_nav">
<%= render "layouts/mail_nav" %>
</div>



<div id="inbox">
    <p style="overflow:hidden;">
        <%= "<strong>Betreff: </strong>" + @message.subject %>
    </p>
    <p>
        <%= "<strong>Von: </strong>" + User.find_by_id(@message.recipient_id).login %>
    </p>
    <p>
        <%= "<strong>Am: </strong>" + @message.created_at.to_s(:long) %>
    </p>
    <br/>
    <p>
			<%= simple_format(h @message.body) %>
    </p>
</div>
