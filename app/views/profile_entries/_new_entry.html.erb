<div id="	" style="display:block;">
	<% form_for [@user, ProfileEntry.new] do |f| %>
	<% if current_user %>
	<%= f.hidden_field :author , :value => current_user.login %>
	<%= f.hidden_field :author_id, :value => current_user.id %>
	<% else %>
	<p>
		<%= f.hidden_field :author, :value => "anonymous user" %>
		<%= f.hidden_field :author_id, :value => 0 %>
	</p>
	<% end %>
	<br/>
	<p>
		<%= f.text_area :body, :class => 'tb_area'%>
	</p>
	<p>
		<%= f.submit t('common.create_profile_entry') %>
		<%= f.submit t('common.close'), :class => "close" %>
	</p>
	<% end %>
</div>

