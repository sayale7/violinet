<h1><%= t('tag.names') %></h1>
<br></br>
<p>
	<b><%= t('tag.german_name') %></b>
	<%=h @tag.tag_names.find_by_language('de').name %>
</p>
<p>
	<b><%= t('tag.english_name') %></b>
	<%=h @tag.tag_names.find_by_language('en').name %>
</p>
<p>
	<b><%= t('tag.for') %></b>
	<% if @tag.is_category %>
		Gruppe
	<% else %>
		Blog
	<% end %>
</p>

<%= link_to 'Edit', edit_tag_path(@tag) %> |
