<% if @profile_image_to_show != nil %>
<%= image_tag @profile_image_to_show.public_filename() %>
<% end %>

<% form_for(:profile_image, :url => profile_images_path,
:html => { :multipart => true }) do |f| -%>
<%= f.hidden_field :user_id, :value => current_user.id %>
   <p>
    <%= t "user.profile_img_upload" %>
</p>
<p>
    <%= f.file_field :uploaded_data%>
</p>
<p>
    <%= submit_tag t("common.upload") %>
</p>
<% end -%>