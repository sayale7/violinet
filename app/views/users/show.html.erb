			<%= ":" %>
		</dt>
		<dd>
			<%= @user_common.state %>
		</dd>
		<% end %>
		<% if !(@user_common.www.to_s == "") %>
		<dt>
			<%= t "user.www" %>
			<%= ":" %>
		</dt>
		<dd>
			<%= @user_common.www %>
		</dd>
		<% end %>
		<% if !(@user_common.phone.to_s == "") %>
		<dt>
			<%= t "user.phone" %>
			<%= ":" %>
		</dt>
		<dd>
			<%= @user_common.phone %>
		</dd>
		<% end %>
	</dl>
</div>




<div class="info_and_entry">
	<div class="account_info">
		<ul>
			<li>
				<%= t "common.login_name" %>: <%=h @user.login %>
			</li>
			<li>
				<% if @user.last_login_at %>
				<%= t "profile.last_login" %>: <%= l @user.last_login_at, :format => :long %>
				<% end %>
			</li>
			<li>
				<%= t "common.email" %>: <%= mail_to h@user.email %>
			</li>
			<% if current_user %>
			<li>
				<div id="button_popup">
					<a href="/sent/new?user=<%= @user.id %>"><%= t("common.send_message_to_user") %></a>
				</div>
			</li>
			<% end %>
		</ul>
	</div>


	<div class="profile_entries">
		<h1><%= t "common.profile_entries" %></h1>
		<a href="#" id="new_entry_link"><%= t("common.write_new_profile_entries") %></a>
		<div id="new_entry">
			<%= render :partial => "profile_entries/new_entry" %>
		</div>
		<% if @entries.size > 0 %>
		<div id="profile_entry_display_all">
			<%= render :partial => 'profile_entries/profile_entries' %>
		</div>
		<% end %>
	</div>
</div>



<div class="profile_image">
    <% if @profile_image %>
    <%= image_tag(@profile_image.public_filename()) %>
    <% end %>
</div>
