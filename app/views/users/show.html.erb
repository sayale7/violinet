<%= render :partial => 'write_message' %>
<%= javascript 'mail', 'toggle_comment', 'jquery.url_utils', 'pagination', 'application' %>

<div class="personal_info">
	<h1><%= t "common.my_personals" %></h1>
	<dl>
		<% if !(@user_common.gender.to_s == "") %>
