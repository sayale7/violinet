<h1>Listing tag_posts</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Post</th>
  </tr>

<% @tag_posts.each do |tag_posts| %>
  <tr>
    <td><%=h tag_posts.tag_id %></td>
    <td><%=h tag_posts.post_id %></td>
    <td><%= link_to 'Show', tag_posts %></td>
    <td><%= link_to 'Edit', edit_tags_post_path(tag_posts) %></td>
    <td><%= link_to 'Destroy', tag_posts, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tag_posts', new_tags_post_path %>