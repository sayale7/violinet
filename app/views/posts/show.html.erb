
<div id="tags">
	<%= @tags.join(", ") %> 
</div>

<div id="post">
<%= render :partial => @post %>
<% if current_user %>
<% if current_user.id == @post.user_id %>
<p>
    <%= link_to t('post.edit'), edit_post_path(@post) %> | <%= link_to t('common.delete'), @post, :method => :delete, :confirm => t("common.confirm") %>
</p>
<% end %>
<% end %>
</div>


<div class="left">
	<h2>New Comment</h2>

	<%= render '/comments/form' %>

	<div id="comments">
		<%= render :partial => '/comments/create' %>
	</div>
</div>

