<% @photo_ablums.each do |album| %>
<% photo = Photo.first(:conditions => ["photo_album_id = ?", album.id]) %>
<% if !photo.nil? %>
<%= image_tag(photo.public_filename(:thumb)) %>
<br/>
<%= link_to t("common.edit_photo_album"), edit_photo_album_path(album) %> | <%= link_to t("common.show_photo_album"), photo_album_path(album) %>
<% end %>
<% end %>
