<% content_for :head do %>
<%= javascript_include_tag 'jquery-1.3.2', 'jquery.galleria.min', 'jquery.jcarousel.pack', 'jquery.hotkeys-0.7.8-packed', 'tutorial' %>
<%= stylesheet_link_tag 'jquery.jcarousel', 'main', 'skin' %>
<% end %>
<h1><%= @photo_ablum.name %></h1>
<p>
    <%= @photo_ablum.description %>
</p>
<% if !@photos.empty? %>
<div id="wrapper">
    <ul id="gallery" class="jcarousel-skin-tango">
        <% @photos.each do |photo| %>
        <li>
            <a href="<%= photo.public_filename() %>" title="<%= photo.description %>"><img src="<%= photo.public_filename(:thumb) %>" alt="" width="80"/></a>
        </li><% end %>
    </ul>
    <div id="img">
    </div>
</div>
<% end %>
