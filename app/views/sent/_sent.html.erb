
	<table>
		<thead>
			<tr>
				<th>
				</th>
				<th>
					<%= t("mail.to") %>
				</th>
				<th>
					<%= t("mail.subject") %>
				</th>
				<th>
					<%= t("mail.received_at") %>
				</th>
			</tr>
		</thead>
		<tbody>
			<% for message in @messages %>
			<tr>
				<td>
					<%= link_to image_tag("email.jpg", :border=>0), sent_path(message) %>
					<span id="edit_messages"><%= link_to image_tag("delete_mail.jpg", :border=>0), :controller => 'sent', :action => 'delete', :id => message.id %></span>
				</td>
				<td>
					<%= User.find_by_id(Recipient.find_by_message_id(message.id).user_id).login %>
				</td>
				<td>
					<%= message.subject %>
				</td>
				<td>
					<%= message.created_at.strftime("%d. %m. %Y um %H:%M Uhr") %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<div class="pagination">
		<%= will_paginate @messages %>
	</div>